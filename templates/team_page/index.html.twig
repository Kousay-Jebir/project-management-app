{% extends 'base.html.twig' %}

{% block title %}TeamPage{% endblock %}

{% block body %}
 <header class="header" >
 {{user.getUserName}}
 <a href="\logout">log out</a>
    </header>
    <div class="team-page-structure">
    <div class="sidebar">
        <div class="team-code-component">
            <h1>Team Code</h1>
            <p style="font-size: 20px;" id="team-code">{{team.getTeamJoinCode}}</p>
        </div>
        <div class="team-leader-component" id="team-leader">Team Leader:<br/>{{leader.getUserName}}</div>
        <a href="{{ path('app_create_project', {id: team.getId()}) }}" ><button class="project-button">Create Project</button></a> 

    </div>
    <div class="main-departement">
    <div class="swiper">
        <button class="swiper-button" id="overview-button">overview</button>
        <button class="swiper-button" id="projects-button">projects</button>
        <button class="swiper-button" id="members-button">members</button>
        
    </div>
    <div  id="team-name" class="team-header">
    {{team.getTeamName}}<span style="display:none" id="team_id">{{team_id}}</span>
    </div>
    <div class="main-departement-content" id="content">
        
   
    </div>
    </div>
    </div>
</div>
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href='{{asset('styles/TeamPage/style.css')}}'>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script type="module" src="{{asset('TeamPage/TeamPageScript.js')}}"></script>
{% endblock %}